<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_back"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/navigationbar_back"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:text="发现群"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <TextView
        android:paddingLeft="80dp"
      android:gravity="center_vertical"
        android:text="新建群"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="10dp"
                android:background="#EDEDED"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/searchbar_searchlist_search_icon"
                android:hint="搜索群"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:drawableRight="@drawable/common_icon_arrow_highlighted"
                android:padding="10dp"
                android:text="明星人气榜"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_groups"
                    android:src="@drawable/tx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_friends"
                    android:layout_toRightOf="@+id/iv_groups"
                    android:text="M鹿M"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tv_friends"
                    android:layout_toRightOf="@+id/iv_groups"
                    android:text="12161人参与粉丝群聊"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/common_icon_arrow_highlighted"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



